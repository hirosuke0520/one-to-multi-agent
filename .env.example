# Database
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=one_to_multi_agent
DB_PORT=5432
# For production with Cloud SQL:
# DB_HOST=/cloudsql/your-project:region:instance
# DATABASE_URL=postgresql://postgres:password@localhost:5432/one_to_multi_agent

# Google Cloud
GCP_PROJECT_ID=one-to-multi-agent
GCS_BUCKET_NAME=one-to-multi-agent-storage

# AI
GOOGLE_API_KEY=your-gemini-api-key-here
USE_REAL_AI=true

# Storage
STORAGE_TYPE=local # 'local' for development, 'gcs' for production
DATA_DIR=./data
TEMP_DIR=./temp
STORAGE_DIR=./storage

# API Server
PORT=8080
NODE_ENV=development

# Web Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8080
# For production:
# NEXT_PUBLIC_API_URL=https://api-one-to-multi-agent-675967400701.asia-northeast1.run.app
# INTERNAL_API_URL=https://api-one-to-multi-agent-675967400701.asia-northeast1.run.app

# Google OAuth Configuration (REQUIRED for authentication)
AUTH_GOOGLE_ID=your-google-client-id
AUTH_GOOGLE_SECRET=your-google-client-secret
AUTH_URL=http://localhost:3000
# For production:
# AUTH_URL=https://web-one-to-multi-agent-675967400701.asia-northeast1.run.app
AUTH_SECRET=your-nextauth-secret-generate-with-openssl-rand-base64-32

# JWT Configuration (for API auth)
JWT_SECRET=your-jwt-secret-here
# For production, use a strong random secret:
# openssl rand -base64 32