# Docker Compose Environment Variables
COMPOSE_PROJECT_NAME=one-to-multi-agent

# Application Environment
NODE_ENV=development

# API Configuration
API_PORT=8787
API_HOST=0.0.0.0

# Web Configuration  
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8787

# Database (PostgreSQL)
POSTGRES_DB=one_to_multi_agent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:password@postgres:5432/one_to_multi_agent

# Redis Configuration
REDIS_URL=redis://redis:6379

# MinIO Configuration (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
S3_ENDPOINT=http://minio:9000
S3_BUCKET=content-files

# GCP Configuration (set these with real values)
GOOGLE_API_KEY=
GCP_PROJECT_ID=one-to-multi-agent

# Platform API Keys (set these with real values)
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=

META_APP_ID=
META_APP_SECRET=

TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

WP_WEBHOOK_URL=

# Feature Flags
ENABLE_THREADS=true
ENABLE_YOUTUBE=true
ENABLE_WORDPRESS=true
ENABLE_TWITTER=false
ENABLE_INSTAGRAM=false
ENABLE_TIKTOK=false